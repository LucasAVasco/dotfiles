configuration {
	columns: 8;
	font: "NotoSans Nerd Font 15";

	show-icons: true;
	display-drun: "ï€‚   Application";

	levenshtein-sort: true;
	matching: "fuzzy";
}

* {
	background-color: rgba(0, 0, 0, 0%);
	text-color: rgb(200, 200, 200);
}

#window {
	background-color: rgba(0, 0, 0, 60%);

	border-radius: 20;

	height: 80%;
	width: 80%;
	location: center;
	anchor: center;
	x-offset: 0;
	y-offset: 0;
}

#inputbar {
	background-color: rgba(0, 0, 0, 30%);

	border-radius: 15 15 0 0;

	margin: 0;
	padding: 5% 20% 5% 20%;
	border: 7;
}

#prompt {
	background-color: rgb(255, 200, 111);
	text-color: rgb(0, 0, 0);

	border-radius: 10;

	padding: 10 20;
}

#entry {
	background-color: rgba(100, 100, 100, 80%);
	placeholder: "Application name...";

	border-radius: 10;
	padding: 10 2 10 15;
	margin: 2 5 0 5;
}

#case-indicator {
	enabled: false;
}

#listview {
	lines: 4;
	columns: 8;
	fixed-columns: true;

	margin: 10 10;
	padding: 50;
	spacing: 20;
	scrollbar: false;
}

#element {
	background-color: rgb(30, 30, 30);

	border-radius: 20;

	padding: 10 5 10 5;
	orientation: vertical;
}

#element-icon {
	/* icon size = width size - 2*inputbar margin, border and padding - listview margin and padding */
	/* There are 4 elements per column. So, divide by 4. This is the element size */
	/* Divide by 2 because there are the element-text */
	size: calc((80% - 2*(0 - 40 - 14) - 20 - 100)/8 /2);

	border-radius: 10;
	border: 0 0 2 2;

	padding: 10;
}

#element-icon.selected.normal {
}

#element-text {
	horizontal-align: 0.5;
	vertical-align: 0.5;
	text-color: rgb(255,255,255);

	font: "NotoSans Nerd Font 12";

	border-radius: 5;

	padding: 4;
	margin: 0 10;
}

#element-text.selected.normal {
	background-color: rgb(255, 200, 111);
	text-color: rgb(0, 0, 0);
}

#element.selected.normal {
	background-color: rgb(50, 50, 50);
	border-color: rgb(255, 200, 111);
	border-radius: 10;
	border: 0 0 2 2;
}

