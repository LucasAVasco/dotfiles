% htpasswd


$ existing-password-file-var: find -name '*.pass'

# Update bcrypt password on password file
podman run --rm -it -v './<existing-password-file-var>:/file' --entrypoint htpasswd httpd:2 -B /file <user_name>

# Update bcrypt password on password file (max computing time allowed)
podman run --rm -it -v './<existing-password-file-var>:/file' --entrypoint htpasswd httpd:2 -BC17 /file <user_name>
