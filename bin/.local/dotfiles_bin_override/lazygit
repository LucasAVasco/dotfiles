#!/bin/bash
#
# Run Lazygit with custom configuration files.
#
# NOTE: You must run Lazygit with `snacks.nvim` at least one time in order to generate its theme configuration files.

source ~/.config/bash/libs/bin_overrides.sh

# Configuration file
config_files="$HOME/.config/lazygit/config.yml"

# Theme file generated by `snacks.nvim`
snacks_theme_file="$HOME/.cache/nvim/lazygit-theme.yml"
if [[ -f "$snacks_theme_file" ]]; then
	config_files="$config_files,$snacks_theme_file"
fi

bin_overrides_call_without_override lazygit -ucf "$config_files" "$@"
