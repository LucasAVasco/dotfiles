#!/bin/bash
#
# Open the default terminal file manager into current terminal emulator instance
#
# This is not a Linux standard functionality. I just use it in my scripts
#
# Dependencies:
# * bash
# * yazi

# Configure LS_COLORS on Zoxide UI
ls_colors_script=~/.cache/antidote/trapd00r/LS_COLORS/lscolors.sh
if [[ -f "$ls_colors_script" ]]; then
	source "$ls_colors_script"
fi

yazi "$@"
